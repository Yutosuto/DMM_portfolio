<% post.post_comments.each do |post_comment| %>
                          <div class="commentuser">
                             <%= post_comment.user.name %>
                          </div>
                          <div class="commentuserimage">
                            <%= attachment_image_tag post_comment.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no-image.jpg" %>
                          </div>
                          <div class="commenttime">
                              <%= post_comment.created_at.strftime('%Y/%m/%d') %></br>
                              <%= post_comment.comment %>
                              <%= link_to(
                                   content_tag(:i, nil, class: 'far fa-trash-alt'),
                                   post_post_comment_path(post, post_comment),
                                   method: :delete,
                                   data: { confirm: '本当に削除しますか？' }) %>
                          </div>
                          <% end %>
