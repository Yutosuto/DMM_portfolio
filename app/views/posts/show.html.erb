<div class="show_title">PostDetails</div>
    <div class="row">
        <div class="col-md-6">
            <div class="postshowimage">
                <%= attachment_image_tag @post, :image, :size => "250x250", fallback: "no-image.jpg" %>
            </div>
                <div class="post_<%= @post.id %>"><%= render "favorites/favorites-btn", post: @post %></div>
                <div class="show-title">Title</div>
                <div class="show-title2">
                    <%= @post.title %>
                </div>

                <div class="show-body">Text</div>
                <div class="show-body2">
                    <%= @post.body %>
                </div>

                <div class="commentitle">Comment</div>
                    <%= form_with(model:[@post, @post_comment], remote: true) do |f| %>
                <div class="commentfield">
                    <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %></br>
                </div>
                    <%= f.submit "送信する", class: "btn-btn-success" %>
                    <% end %>
                    <%= button_to '戻る', posts_path, method: :get, class: "btn-btn-success" %>
       </div>
                <div class="col-md-6">
                    　<p class="commentsCount">コメント件数：<%= @post.post_comments.count %></p>
                      <div class="post_comments">
                          <%= render "post_comments/index",post: @post %>
                      </div>
           </div>
    </div>
</div>

