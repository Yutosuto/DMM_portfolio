<div class="container">
    <h2>投稿一覧<i class="fas fa-clipboard-list"></i></h2>
</div>

  <table class="posts-table">
    <thead>
      <tr>
        <th>User</th>
        <th>Title</th>
        <th>Opinion</th>
        <th></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
      <tr id="post_<%=post.id %>">
        <td><%= link_to user_path(post.user) do %>
        <%= attachment_image_tag(post.user, :profile_image, :fill, 30, 30, fallback: "no-image.jpg") %></br>
          <% end %>
        <%= current_user.name %>
        </td>
        <td><%= link_to post.title, post_path(post)%></td>
        <td><%= post.body %></td>
        <td><%= post.image %></td>
        <td class="post_<%= post.id %>"><%= render "favorites/favorites-btn", post: post %></td>
        <td>コメント数: <%= @post.post_comments.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>